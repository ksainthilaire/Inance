<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="31dp"
                android:bottomRightRadius="31dp"
                android:topLeftRadius="31dp"
                android:topRightRadius="31dp"></corners>
        </shape>
    </item>

    <!-- Drop Shadow Stack -->

    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/purple_700" />

            <corners android:radius="31dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/orange_yellow_crayola" />

            <corners android:radius="31dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/midnight_green_eagle" />

            <corners android:radius="31dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />

            <corners android:radius="31dp" />
        </shape>
    </item>
</layer-list>