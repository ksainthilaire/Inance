<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.fragments.FragmentRegisterStepOne">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/register_title"
            android:textColor="@color/orange_yellow_crayola"
            android:textSize="25sp"
            android:textStyle="bold" />




        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">



            <com.ksainthi.inance.presentation.components.Input
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:inputLabel="Adresse e-mail"/>

            <com.ksainthi.inance.presentation.components.Input
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:inputLabel="Nom complet"/>


            <com.ksainthi.inance.presentation.components.Input
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:inputLabel="Mot de passe"
                custom:inputType="password"
                />

            <com.ksainthi.inance.presentation.components.Input
                android:id="@+id/rePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:inputLabel="Confirmation de mot de passe"
                custom:inputType="password"
                />




            <Button
                android:id="@+id/submit_button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/primary_rounded_button"
                android:padding="10dp"
                android:text="@string/register_submit"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>
</layout>